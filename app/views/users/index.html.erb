<div class="container">
  <div class="row mx-auto">
    <%= render '/users/sidebar', book: @book %>
    <div class="col-lg-8 offset-md-1">
      <h2 class="mt-4 pb-2 border-bottom border-secondary">Users</h2>
      <table class="container">
        <thead>
          <tr class="row border-bottom border-secondary">
            <th class="col-lg-3 pl-2 py-2">image</th>
            <th class="col-lg-8 pl-2 py-2">name</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr class="row border-bottom border-secondary">
              <td class="col-lg-3 pl-2 py-2"><%= attachment_image_tag user, :profile_image, fallback: "no_image.jpg", size: "40x40" %></td>
              <td class="col-lg-6 pl-2 py-2"><%= user.name %></td>
              <td class="col-lg-3 pl-2 py-2"><%= link_to "show", user_path(user.id) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
