<div class="container px-5 px-sm-0">
  <div class="row mx-auto">
    <%= render '/users/sidebar', book: @book_s, user: @user_s %>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-4 pb-2 border-bottom border-secondary">Books</h2>
      <table class="container">
        <thead>
          <tr class="row border-bottom border-secondary">
            <th class="col-md-1"></th>
            <th class="col-md-3 pl-2 py-2">Title</th>
            <th class="col-md-8 pl-2 py-2">Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr class="row border-top border-secondary">
              <td class="col-md-1 pl-2 py-2">
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
                <% end %>
              </td>
              <td class="col-md-3 pl-2 py-2">
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td class="col-md-8 pl-2 py-2">
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>