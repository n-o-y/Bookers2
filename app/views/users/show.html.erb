<div class="container">
  <div class="row">
    <%= render '/users/sidebar', book: @book, user: @user_s %>
    <div class="col-md-8 offset-md-1">
      <h2 class="border-bottom border-secondary">Books</h2>
      <table>
        <thead class="border-bottom border-secondary">
          <th>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr class="border-bottom border-secondary">
              <td>
                <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td>
                <%= book.body %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>