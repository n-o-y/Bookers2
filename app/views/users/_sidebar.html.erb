<div class="col-lg-3">

<h2 class="mt-4 pb-2">User info</h2>
<%= attachment_image_tag current_user, :profile_image, fallback: "no_image.jpg", size: "60x60" %>
<table>
  <tr class="border-top border-secondary">
    <th class="p-2">name</th>
    <td><%= current_user.name %></td>
  </tr>
  <tr class="border-top border-secondary">
    <th class="p-2">introduction</th>
    <td><%= current_user.introduction %></td>
  </tr>
</table>
<div class="row">
  <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary btn-sm w-100" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>


<h4>New book</h4>
<%= form_with model:book, local:true do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body%>
  <%= f.submit 'Create Book' %>
<% end %>

</div>