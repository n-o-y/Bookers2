<div class="container px-5 px-sm-0">
  <div class="row mx-auto">
    <%= render '/users/sidebar', book: @book_s, user: @user_s %>
    <div class="col-md-8 offset-md-1">
      <h2 class="mt-4 pb-2 border-bottom border-secondary">Book detail</h2>
      <table class="container">
        <tbody>
          <tr class="row d-flex">
            <td class="col-md-2 pl-2 py-2">
              <%= link_to user_path(@book.user.id) do %>
                <%= attachment_image_tag @book.user, :profile_image, fallback: "no_image.jpg", size: "40x40" %><br/>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td class="col-md-3 pl-2 py-2">
              <%= link_to book_path(params[:id]) do %>
                <%= @book.title %>
              <% end %>
            </td>
            <td class="col-md-5 pl-2 py-2"><%= @book.body %></td>
            <% if current_user.id == @book.user.id %>
              <td class="col-md-1 pl-2 py-2"><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
              <td class="col-md-1 pl-2 py-2"><%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-danger" %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>


