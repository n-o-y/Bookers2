<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=devise-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header class="bg-dark">
      <nav class="navbar navbar-expand-lg navbar-light">
        <a class="navbar-brand p-2 text-light" href="/">Bookers</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
          <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
              <li class="nav-item">
                <%= link_to "Home", user_path(current_user.id), class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to "Users", users_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to "Books", books_path, class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to "logout", destroy_user_session_path, method: :delete, class: "nav-link text-light" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Home", "/", class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to "About", "/home/about", class: "nav-link text-light" %>
              </li>
              <li class="nav-item">
                <%= link_to "sign up", new_user_registration_path, class: "nav-link text-light"  %>
              </li>
              <li class="nav-item">
                <%= link_to "login", new_user_session_path, class: "nav-link text-light" %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>
    <%= yield %>
    <footer class="p-2 mx-auto">
      CopyRight Infratop.inc
    </footer>
  </body>
</html>
